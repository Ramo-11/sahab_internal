<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Proposals</h2>
        <p class="text-muted">Manage your business proposals</p>
    </div>
    <a href="/proposals/new" class="btn btn-primary">Create New Proposal</a>
</div>

<div class="card">
    <div class="card-body">
        <% if (proposals && proposals.length > 0) { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Client</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th class="hide-mobile">Timeline</th>
                            <th class="hide-mobile">Valid Until</th>
                            <th class="hide-mobile">Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% proposals.forEach(proposal => { %>
                        <tr>
                            <td>
                                <a href="/proposals/<%= proposal.id %>" class="text-primary font-weight-medium">
                                    <%= proposal.title %>
                                </a>
                            </td>
                            <td>
                                <div>
                                    <div class="font-weight-medium"><%= proposal.client_name %></div>
                                    <% if (proposal.client_company) { %>
                                        <small class="text-muted"><%= proposal.client_company %></small>
                                    <% } %>
                                </div>
                            </td>
                            <td>
                                <span class="font-weight-medium">$<%= (proposal.amount || 0).toFixed(2) %></span>
                            </td>
                            <td>
                                <span class="status-badge status-<%= proposal.status %>">
                                    <%= proposal.status %>
                                </span>
                            </td>
                            <td class="hide-mobile">
                                <% if (proposal.proposed_timeline) { %>
                                    <%= proposal.proposed_timeline %>
                                <% } else { %>
                                    <span class="text-muted">Not specified</span>
                                <% } %>
                            </td>
                            <td class="hide-mobile">
                                <% if (proposal.valid_until) { %>
                                    <%= new Date(proposal.valid_until).toLocaleDateString() %>
                                    <% 
                                        const validDate = new Date(proposal.valid_until);
                                        const today = new Date();
                                        const isExpired = validDate < today;
                                    %>
                                    <% if (isExpired && proposal.status !== 'accepted' && proposal.status !== 'rejected') { %>
                                        <span class="text-danger">(Expired)</span>
                                    <% } %>
                                <% } else { %>
                                    <span class="text-muted">No expiry</span>
                                <% } %>
                            </td>
                            <td class="hide-mobile">
                                <%= new Date(proposal.created_at).toLocaleDateString() %>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/proposals/<%= proposal.id %>" class="btn btn-sm btn-secondary">View</a>
                                    <a href="/proposals/<%= proposal.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                                    <% if (proposal.status === 'accepted') { %>
                                        <a href="/invoices/new?proposal_id=<%= proposal.id %>" class="btn btn-sm btn-success">Invoice</a>
                                    <% } %>
                                    <button onclick="deleteProposal(<%= proposal.id %>)" class="btn btn-sm btn-danger">Delete</button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <svg style="width: 64px; height: 64px; color: var(--text-muted); margin-bottom: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h4>No proposals yet</h4>
                <p class="text-muted mb-4">Start by creating your first proposal to present to clients.</p>
                <a href="/proposals/new" class="btn btn-primary">Create Your First Proposal</a>
            </div>
        <% } %>
    </div>
</div>

<script>
function deleteProposal(proposalId) {
    if (confirm('Are you sure you want to delete this proposal? This action cannot be undone.')) {
        fetch(`/proposals/${proposalId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error deleting proposal');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting proposal');
        });
    }
}
</script>

<%- include('../partials/footer') %>