<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">Tools</h1>
        <p class="page-subtitle">Utilities to streamline your workflow</p>
    </div>
</div>

<!-- Tools Grid -->
<div class="tools-grid">
    <!-- Invoice Number Generator -->
    <div class="card tool-card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-hashtag text-primary"></i>
                Invoice Number Generator
            </h3>
        </div>
        <div class="card-body">
            <p class="tool-description">
                Generate unique 5-digit invoice numbers. Numbers are stored to prevent duplicates.
            </p>

            <div class="generate-section">
                <div class="form-group">
                    <label class="form-label">Used For (optional)</label>
                    <input
                        type="text"
                        class="form-control"
                        id="invoiceUsedFor"
                        placeholder="e.g., Client XYZ - Website Project"
                    />
                </div>
                <div class="form-group">
                    <label class="form-label">Notes (optional)</label>
                    <input
                        type="text"
                        class="form-control"
                        id="invoiceNotes"
                        placeholder="e.g., Q4 2024 invoice"
                    />
                </div>
                <button class="btn btn-primary btn-block" onclick="generateInvoiceNumber()">
                    <i class="fas fa-magic"></i> Generate Number
                </button>
            </div>

            <div class="generated-number-display" id="generatedNumberDisplay" style="display: none">
                <div class="number-label">Generated Invoice Number</div>
                <div class="number-value" id="generatedNumber"></div>
                <button class="btn btn-sm btn-secondary" onclick="copyToClipboard()">
                    <i class="fas fa-copy"></i> Copy
                </button>
            </div>

            <div class="recent-numbers-section">
                <h4 class="section-subtitle">
                    <i class="fas fa-history"></i> Recent Numbers
                    <span class="badge badge-secondary ml-2"><%= recentNumbers.length %></span>
                </h4>
                <div class="recent-numbers-list" id="recentNumbersList">
                    <% if (recentNumbers.length === 0) { %>
                    <div class="empty-state-small">
                        <i class="fas fa-inbox"></i>
                        <p>No numbers generated yet</p>
                    </div>
                    <% } else { %> <% recentNumbers.forEach(num => { %>
                    <div class="number-item" data-id="<%= num._id %>">
                        <div class="number-info">
                            <span class="number-badge"><%= num.number %></span>
                            <span class="number-date">
                                <%= new Date(num.createdAt).toLocaleDateString('en-US', { month:
                                'short', day: 'numeric', year: 'numeric' }) %>
                            </span>
                            <% if (num.usedFor) { %>
                            <span class="number-used-for" title="<%= num.usedFor %>">
                                <i class="fas fa-tag"></i> <%= num.usedFor.substring(0, 30) %><%=
                                num.usedFor.length > 30 ? '...' : '' %>
                            </span>
                            <% } %>
                        </div>
                        <div class="number-actions">
                            <button
                                class="btn btn-sm btn-icon"
                                onclick="copyNumber('<%= num.number %>')"
                                title="Copy"
                            >
                                <i class="fas fa-copy"></i>
                            </button>
                            <button
                                class="btn btn-sm btn-icon text-danger"
                                onclick="deleteNumber('<%= num._id %>')"
                                title="Delete"
                            >
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <% }); %> <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- PDF Watermark Remover -->
    <div class="card tool-card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-file-pdf text-danger"></i>
                PDF Watermark Remover
            </h3>
        </div>
        <div class="card-body">
            <p class="tool-description">
                Remove the footer/watermark from invoice PDFs by redacting the bottom portion of
                each page.
            </p>

            <form id="pdfProcessForm" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-label">Select PDF File</label>
                    <div class="file-upload-area" id="fileUploadArea">
                        <input
                            type="file"
                            class="file-input"
                            id="pdfFileInput"
                            name="pdfFile"
                            accept=".pdf"
                            required
                        />
                        <div class="file-upload-content">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <p>Drag & drop your PDF here or click to browse</p>
                            <span class="file-name" id="selectedFileName">No file selected</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Footer Height (pixels)</label>
                    <input
                        type="number"
                        class="form-control"
                        id="footerHeight"
                        name="footerHeight"
                        value="100"
                        min="10"
                        max="500"
                    />
                    <small class="form-help">
                        Height of the area to remove from the bottom of each page. Default is 100px
                        (Wave watermark).
                    </small>
                </div>

                <div class="form-group">
                    <label class="form-label">Preview Settings</label>
                    <div class="footer-preview">
                        <div class="preview-page">
                            <div class="preview-content">Page Content</div>
                            <div class="preview-footer" id="previewFooter" style="height: 20px">
                                <span>Area to remove</span>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block" id="processBtn">
                    <i class="fas fa-magic"></i> Process PDF
                </button>
            </form>

            <div class="processing-status" id="processingStatus" style="display: none">
                <div class="spinner"></div>
                <span>Processing PDF...</span>
            </div>

            <div class="process-result" id="processResult" style="display: none">
                <i class="fas fa-check-circle text-success"></i>
                <span>PDF processed successfully! Download should start automatically.</span>
            </div>
        </div>
    </div>

    <!-- Invoice Generator -->
    <div class="card tool-card invoice-generator-card">
        <div class="card-header">
            <h3 class="card-title">
                <i class="fas fa-file-invoice-dollar text-success"></i>
                Invoice Generator
            </h3>
        </div>
        <div class="card-body">
            <p class="tool-description">
                Generate professional PDF invoices. Select a customer, add line items, and download instantly.
            </p>

            <form id="invoiceGeneratorForm">
                <!-- Invoice Details Row -->
                <div class="invoice-details-row">
                    <div class="form-group">
                        <label class="form-label">Invoice Number <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input
                                type="text"
                                class="form-control"
                                id="invNumber"
                                placeholder="Auto-generating..."
                                required
                            />
                            <button type="button" class="btn btn-secondary btn-sm" onclick="generateNewInvoiceNumber()" title="Generate New">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Invoice Date</label>
                        <input
                            type="date"
                            class="form-control"
                            id="invDate"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Due Date</label>
                        <input
                            type="date"
                            class="form-control"
                            id="invDueDate"
                            required
                        />
                    </div>
                </div>

                <!-- Customer Selection -->
                <div class="form-group">
                    <label class="form-label">Customer <span class="text-danger">*</span></label>
                    <select class="form-control" id="invCustomer" required>
                        <option value="">Loading customers...</option>
                    </select>
                </div>

                <!-- Line Items Section -->
                <div class="line-items-section">
                    <div class="section-header">
                        <h4 class="section-subtitle">
                            <i class="fas fa-list"></i> Line Items
                        </h4>
                        <button type="button" class="btn btn-sm btn-primary" onclick="addInvoiceLineItem()">
                            <i class="fas fa-plus"></i> Add Item
                        </button>
                    </div>

                    <div class="line-items-table-wrapper">
                        <table class="line-items-table" id="lineItemsTable">
                            <thead>
                                <tr>
                                    <th class="item-col">Item</th>
                                    <th class="qty-col">Qty</th>
                                    <th class="price-col">Price</th>
                                    <th class="amount-col">Amount</th>
                                    <th class="action-col"></th>
                                </tr>
                            </thead>
                            <tbody id="lineItemsBody">
                                <!-- Line items will be added here dynamically -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Totals -->
                    <div class="invoice-totals">
                        <div class="total-row">
                            <span class="total-label">Subtotal:</span>
                            <span class="total-value" id="invSubtotal">$0.00</span>
                        </div>
                        <div class="total-row total-final">
                            <span class="total-label">Total:</span>
                            <span class="total-value" id="invTotal">$0.00</span>
                        </div>
                        <div class="total-row amount-due">
                            <span class="total-label">Amount Due (USD):</span>
                            <span class="total-value" id="invAmountDue">$0.00</span>
                        </div>
                    </div>
                </div>

                <!-- Notes -->
                <div class="form-group">
                    <label class="form-label">Notes / Terms</label>
                    <textarea
                        class="form-control"
                        id="invNotes"
                        rows="2"
                        placeholder="Payment instructions, terms, etc."
                    >Please send the payment to sahab@sahab-solutions.com on Zelle</textarea>
                </div>

                <!-- Generate Button -->
                <button type="submit" class="btn btn-success btn-block" id="generateInvoiceBtn">
                    <i class="fas fa-file-pdf"></i> Generate Invoice PDF
                </button>
            </form>

            <!-- Generation Status -->
            <div class="generation-status" id="generationStatus" style="display: none">
                <div class="spinner"></div>
                <span>Generating PDF...</span>
            </div>
        </div>
    </div>
</div>

<!-- Additional Tools Section -->
