    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-toolbox"></i>
            Quick Actions
        </h3>
    </div>
    <div class="card-body">
        <div class="quick-tools-grid">
            <a href="/invoices/new" class="quick-tool-btn">
                <div class="quick-tool-icon primary">
                    <i class="fas fa-file-invoice"></i>
                </div>
                <span>New Invoice</span>
            </a>
            <a href="/clients/new" class="quick-tool-btn">
                <div class="quick-tool-icon success">
                    <i class="fas fa-user-plus"></i>
                </div>
                <span>Add Client</span>
            </a>
            <a href="/proposals/new" class="quick-tool-btn">
                <div class="quick-tool-icon info">
                    <i class="fas fa-file-alt"></i>
                </div>
                <span>New Proposal</span>
            </a>
            <a href="/expenses" class="quick-tool-btn">
                <div class="quick-tool-icon warning">
                    <i class="fas fa-receipt"></i>
                </div>
                <span>Track Expense</span>
            </a>
        </div>
    </div>
</div>
