<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">Invoices</h1>
        <p class="page-subtitle">Track payments and billing</p>
    </div>
    <div class="page-actions">
        <button class="btn btn-secondary" onclick="exportData()">
            <i class="fas fa-download"></i> Export
        </button>
        <button class="btn btn-primary" onclick="openNewInvoiceModal()">
            <i class="fas fa-plus"></i> New Invoice
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card mb-3">
    <div class="filters">
        <div class="filter-row">
            <div class="filter-group">
                <input type="text" 
                       class="form-control" 
                       id="searchInput" 
                       placeholder="Search invoices..."
                       value="<%= filters.search || '' %>">
            </div>
            <div class="filter-group">
                <select class="form-control" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Draft</option>
                    <option value="sent" <%= filters.status === 'sent' ? 'selected' : '' %>>Sent</option>
                    <option value="paid" <%= filters.status === 'paid' ? 'selected' : '' %>>Paid</option>
                    <option value="overdue" <%= filters.status === 'overdue' ? 'selected' : '' %>>Overdue</option>
                </select>
            </div>
            <div class="filter-group">
                <select class="form-control" id="clientFilter">
                    <option value="">All Clients</option>
                    <% if (locals.clients) { %>
                        <% clients.forEach(client => { %>
                            <option value="<%= client._id %>" <%= filters.client === client._id ? 'selected' : '' %>>
                                <%= client.company || client.name %>
                            </option>
                        <% }); %>
                    <% } %>
                </select>
            </div>
            <button class="btn btn-primary" onclick="applyFilters()">
                <i class="fas fa-filter"></i> Apply
            </button>
            <button class="btn btn-secondary" onclick="clearFilters()">
                <i class="fas fa-times"></i> Clear
            </button>
        </div>
    </div>
</div>

<!-- Invoices Table -->
<div class="card">
    <div class="table-responsive">
        <table class="table" id="invoicesTable">
            <thead>
                <tr>
                    <th>Invoice</th>
                    <th>Title</th>
                    <th>Client</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Due Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (invoices.length === 0) { %>
                <tr>
                    <td colspan="7" class="text-center">
                        <div class="empty-state">
                            <i class="fas fa-file-invoice-dollar fa-3x text-muted mb-3"></i>
                            <p>No invoices found</p>
                            <a href="/invoices/new" class="btn btn-primary btn-sm">Create Your First Invoice</a>
                        </div>
                    </td>
                </tr>
                <% } else { %>
                    <% invoices.forEach(invoice => { %>
                    <tr data-id="<%= invoice._id %>" data-invoice='<%= JSON.stringify(invoice) %>'>
                        <td>
                            <% if (invoice.invoiceNumber) { %>
                                <strong>#<%= invoice.invoiceNumber %></strong>
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td class="editable-cell">
                            <span class="view-mode"><%= invoice.title %></span>
                            <input type="text" class="form-control edit-mode" 
                                   style="display: none;" value="<%= invoice.title %>" data-field="title">
                        </td>
                        <td><%= invoice.client?.company || invoice.client?.name || '-' %></td>
                        <td class="editable-cell">
                            <span class="view-mode">
                                $<%= Number(invoice.amount).toFixed(2) %>
                            </span>
                            <input type="number" class="form-control edit-mode" 
                                style="display: none;" value="<%= invoice.amount %>" 
                                data-field="amount" step="0.01">
                        </td>
                        <td class="editable-cell">
                            <span class="view-mode">
                                <span class="badge badge-<%= 
                                    invoice.status === 'paid' ? 'success' : 
                                    invoice.status === 'partial' ? 'warning' :
                                    invoice.status === 'overdue' ? 'danger' : 
                                    invoice.status === 'sent' ? 'primary' : 'secondary' 
                                %>">
                                    <%= invoice.status %>
                                </span>
                                <% if (invoice.status === 'partial' && invoice.balanceDue) { %>
                                    <small class="d-block text-muted mt-1">
                                        Balance: $<%= invoice.balanceDue.toFixed(2) %>
                                    </small>
                                <% } %>
                            </span>
                            <select class="form-control edit-mode" style="display: none;" data-field="status">
                                <option value="draft" <%= invoice.status === 'draft' ? 'selected' : '' %>>Draft</option>
                                <option value="sent" <%= invoice.status === 'sent' ? 'selected' : '' %>>Sent</option>
                                <option value="partial" <%= invoice.status === 'partial' ? 'selected' : '' %>>Partial</option>
                                <option value="paid" <%= invoice.status === 'paid' ? 'selected' : '' %>>Paid</option>
                                <option value="overdue" <%= invoice.status === 'overdue' ? 'selected' : '' %>>Overdue</option>
                            </select>
                        </td>
                        <td class="editable-cell">
                            <span class="view-mode">
                                <%= new Date(invoice.dueDate).toLocaleDateString() %>
                                <% if (invoice.isOverdue && invoice.status !== 'paid') { %>
                                    <i class="fas fa-exclamation-triangle text-danger ml-1"></i>
                                <% } %>
                            </span>
                            <input type="date" class="form-control edit-mode" 
                                   style="display: none;" value="<%= new Date(invoice.dueDate).toISOString().split('T')[0] %>" 
                                   data-field="dueDate">
                        </td>
                        <td>
                            <div class="action-buttons">
                                <!-- View mode actions -->
                                <div class="view-actions">
                                    <% if (invoice.documentUrl) { %>
                                        <a href="<%= invoice.documentUrl %>" target="_blank" 
                                        class="btn btn-sm btn-icon text-primary" title="View Document">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                    <% } %>
                                    <% if (invoice.status !== 'paid') { %>
                                        <button class="btn btn-sm btn-icon text-warning" 
                                                onclick="openPartialPaymentModal('<%= invoice._id %>')" 
                                                title="Record Partial Payment">
                                            <i class="fas fa-coins"></i>
                                        </button>
                                        <button class="btn btn-sm btn-icon text-success" 
                                                onclick="markAsPaid('<%= invoice._id %>')" title="Mark as Paid">
                                            <i class="fas fa-check-circle"></i>
                                        </button>
                                    <% } %>
                                    <button class="btn btn-sm btn-icon" 
                                            onclick="editInvoice('<%= invoice._id %>')" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-icon text-danger" 
                                            onclick="deleteInvoice('<%= invoice._id %>')" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                                <!-- Edit mode actions -->
                                <div class="edit-actions" style="display: none;">
                                    <button class="btn btn-sm btn-success" 
                                            onclick="saveInvoice('<%= invoice._id %>')">
                                        <i class="fas fa-save"></i>
                                    </button>
                                    <button class="btn btn-sm btn-secondary" 
                                            onclick="cancelEdit('<%= invoice._id %>')">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('modals') %>