<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <h1 class="page-title">Invoices</h1>
        <p class="page-subtitle">Track payments and billing</p>
    </div>
    <div class="page-actions">
        <button class="btn btn-secondary" onclick="exportData()">
            <i class="fas fa-download"></i> Export
        </button>
        <button class="btn btn-primary" onclick="openNewInvoiceModal()">
            <i class="fas fa-plus"></i> New Invoice
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="stats-grid mb-4">
    <% 
        let totalPaid = 0;
        let totalPending = 0;
        let totalOverdue = 0;
        invoices.forEach(inv => {
            const paidAmount = inv.amountPaid || 0;
            totalPaid += paidAmount;

            const pending = inv.amount - paidAmount;
            if (pending > 0) {
                totalPending += pending;
                if (inv.isOverdue) {
                    totalOverdue += pending;
                }
            }
        });
    %>
    <div class="stat-card">
        <div class="stat-label">Total Paid</div>
        <div class="stat-value text-success">$<%= totalPaid.toFixed(2) %></div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Total Pending</div>
        <div class="stat-value text-warning">$<%= totalPending.toFixed(2) %></div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Overdue</div>
        <div class="stat-value text-danger">$<%= totalOverdue.toFixed(2) %></div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-3">
    <div class="filters">
        <div class="filter-row">
            <div class="filter-group">
                <input type="text" 
                       class="form-control" 
                       id="searchInput" 
                       placeholder="Search invoices..."
                       value="<%= filters.search || '' %>">
            </div>
            <div class="filter-group">
                <select class="form-control" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Draft</option>
                    <option value="sent" <%= filters.status === 'sent' ? 'selected' : '' %>>Sent</option>
                    <option value="partial" <%= filters.status === 'partial' ? 'selected' : '' %>>Partial</option>
                    <option value="paid" <%= filters.status === 'paid' ? 'selected' : '' %>>Paid</option>
                    <option value="overdue" <%= filters.status === 'overdue' ? 'selected' : '' %>>Overdue</option>
                </select>
            </div>
            <div class="filter-group">
                <select class="form-control" id="clientFilter">
                    <option value="">All Clients</option>
                    <% if (locals.clients) { %>
                        <% clients.forEach(client => { %>
                            <option value="<%= client._id %>" <%= filters.client === client._id ? 'selected' : '' %>>
                                <%= client.company || client.name %>
                            </option>
                        <% }); %>
                    <% } %>
                </select>
            </div>
            <button class="btn btn-primary" onclick="applyFilters()">
                <i class="fas fa-filter"></i> Apply
            </button>
            <button class="btn btn-secondary" onclick="clearFilters()">
                <i class="fas fa-times"></i> Clear
            </button>
        </div>
    </div>
</div>

<!-- Invoices Table -->
<div class="card">
    <div class="table-responsive">
        <table class="table" id="invoicesTable">
            <thead>
                <tr>
                    <th class="sortable" onclick="sortTable('invoiceNumber')" style="cursor: pointer;">
                        Invoice # <i class="fas fa-sort sort-icon"></i>
                    </th>
                    <th class="sortable" onclick="sortTable('title')" style="cursor: pointer;">
                        Title <i class="fas fa-sort sort-icon"></i>
                    </th>
                    <th class="sortable" onclick="sortTable('client')" style="cursor: pointer;">
                        Client <i class="fas fa-sort sort-icon"></i>
                    </th>
                    <th class="sortable" onclick="sortTable('amount')" style="cursor: pointer;">
                        Amount <i class="fas fa-sort sort-icon"></i>
                    </th>
                    <th class="sortable" onclick="sortTable('status')" style="cursor: pointer;">
                        Status <i class="fas fa-sort sort-icon"></i>
                    </th>
                    <th class="sortable" onclick="sortTable('dueDate')" style="cursor: pointer;">
                        Due Date <i class="fas fa-sort sort-icon"></i>
                    </th>
                    <th width="20%">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (invoices.length === 0) { %>
                <tr>
                    <td colspan="7" class="text-center">
                        <div class="empty-state">
                            <i class="fas fa-file-invoice-dollar fa-3x text-muted mb-3"></i>
                            <p>No invoices found</p>
                            <button onclick="openNewInvoiceModal()" class="btn btn-primary btn-sm">Create Your First Invoice</button>
                        </div>
                    </td>
                </tr>
                <% } else { %>
                    <% invoices.forEach(invoice => { %>
                    <tr data-id="<%= invoice._id %>" data-invoice='<%= JSON.stringify(invoice) %>'>
                        <td>
                            <strong>#<%= invoice.invoiceNumber || '-' %></strong>
                        </td>
                        <td class="editable-cell">
                            <span class="view-mode"><%= invoice.title %></span>
                            <input type="text" class="form-control edit-mode" 
                                   style="display: none;" value="<%= invoice.title %>" data-field="title">
                        </td>
                        <td><%= invoice.client?.company || invoice.client?.name || '-' %></td>
                        <td class="editable-cell">
                            <span class="view-mode">
                                $<%= Number(invoice.amount).toFixed(2) %>
                                <% if (invoice.status === 'paid' && invoice.amountPaid > invoice.amount) { %>
                                    <small class="d-block text-success">Paid: $<%= invoice.amountPaid.toFixed(2) %></small>
                                <% } %>
                            </span>
                            <input type="number" class="form-control edit-mode" 
                                style="display: none;" value="<%= invoice.amount %>" 
                                data-field="amount" step="0.01">
                        </td>
                        <td class="editable-cell">
                            <span class="view-mode">
                                <span class="badge badge-<%= 
                                    invoice.status === 'paid' ? 'success' : 
                                    invoice.status === 'partial' ? 'warning' :
                                    invoice.isOverdue ? 'danger' : 
                                    invoice.status === 'sent' ? 'primary' : 'secondary' 
                                %>">
                                    <%= invoice.isOverdue && invoice.status !== 'paid' ? 'OVERDUE' : invoice.status.toUpperCase() %>
                                </span>
                                <% if (invoice.status === 'partial' && invoice.balanceDue) { %>
                                    <small class="d-block text-muted mt-1">
                                        Balance: $<%= invoice.balanceDue.toFixed(2) %>
                                    </small>
                                <% } %>
                            </span>
                            <select class="form-control edit-mode" style="display: none;" data-field="status">
                                <option value="draft" <%= invoice.status === 'draft' ? 'selected' : '' %>>Draft</option>
                                <option value="sent" <%= invoice.status === 'sent' ? 'selected' : '' %>>Sent</option>
                                <option value="partial" <%= invoice.status === 'partial' ? 'selected' : '' %>>Partial</option>
                                <option value="paid" <%= invoice.status === 'paid' ? 'selected' : '' %>>Paid</option>
                                <option value="overdue" <%= invoice.status === 'overdue' ? 'selected' : '' %>>Overdue</option>
                            </select>
                        </td>
                        <td class="editable-cell">
                            <span class="view-mode">
                                <%= new Date(invoice.dueDate).toLocaleDateString() %>
                                <% if (invoice.isOverdue && invoice.status !== 'paid') { %>
                                    <i class="fas fa-exclamation-triangle text-danger ml-1"></i>
                                <% } %>
                            </span>
                            <input type="date" class="form-control edit-mode" 
                                   style="display: none;" value="<%= new Date(invoice.dueDate).toISOString().split('T')[0] %>" 
                                   data-field="dueDate">
                        </td>
                        <td>
                            <div class="action-buttons">
                                <!-- View mode actions -->
                                <div class="view-actions d-flex flex-wrap" style="gap: 0.25rem;">
                                    <% if (invoice.status !== 'paid') { %>
                                        <button class="btn btn-sm btn-outline-warning" 
                                                onclick="openPartialPaymentModal('<%= invoice._id %>')"
                                                title="Record Payment">
                                            Payment
                                        </button>
                                        <button class="btn btn-sm btn-outline-success" 
                                                onclick="markAsPaid('<%= invoice._id %>')"
                                                title="Mark as Paid">
                                            Paid
                                        </button>
                                    <% } %>
                                    
                                    <button class="btn btn-sm btn-outline-primary" 
                                            onclick="editInvoice('<%= invoice._id %>')"
                                            title="Edit">
                                        Edit
                                    </button>
                                    
                                    <button class="btn btn-sm btn-outline-info" 
                                            onclick="showInvoiceDetails('<%= invoice._id %>')"
                                            title="View Details">
                                        Details
                                    </button>
                                    
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="deleteInvoice('<%= invoice._id %>')"
                                            title="Delete">
                                        Delete
                                    </button>
                                </div>
                                <!-- Edit mode actions -->
                                <div class="edit-actions" style="display: none;">
                                    <button class="btn btn-sm btn-success" 
                                            onclick="saveInvoice('<%= invoice._id %>')">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                    <button class="btn btn-sm btn-secondary" 
                                            onclick="cancelEdit('<%= invoice._id %>')">
                                        <i class="fas fa-times"></i> Cancel
                                    </button>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('modals') %>