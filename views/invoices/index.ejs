<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Invoices</h2>
        <p class="text-muted">Manage your billing and payments</p>
    </div>
    <a href="/invoices/new" class="btn btn-primary">Create New Invoice</a>
</div>

<div class="card">
    <div class="card-body">
        <% if (invoices && invoices.length > 0) { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Invoice #</th>
                            <th>Client</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th class="hide-mobile">Issue Date</th>
                            <th class="hide-mobile">Due Date</th>
                            <th class="hide-mobile">Proposal</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% invoices.forEach(invoice => { %>
                        <tr>
                            <td>
                                <a href="/invoices/<%= invoice.id %>" class="text-primary font-weight-medium">
                                    <%= invoice.invoice_number %>
                                </a>
                            </td>
                            <td>
                                <div>
                                    <div class="font-weight-medium"><%= invoice.client_name %></div>
                                    <% if (invoice.client_company) { %>
                                        <small class="text-muted"><%= invoice.client_company %></small>
                                    <% } %>
                                </div>
                            </td>
                            <td>
                                <span class="font-weight-medium">$<%= (invoice.total_amount || 0).toFixed(2) %></span>
                                <% if (invoice.tax_amount && invoice.tax_amount > 0) { %>
                                    <br><small class="text-muted">+$<%= invoice.tax_amount.toFixed(2) %> tax</small>
                                <% } %>
                            </td>
                            <td>
                                <span class="status-badge status-<%= invoice.status %>">
                                    <%= invoice.status %>
                                </span>
                                <% 
                                    const dueDate = new Date(invoice.due_date);
                                    const today = new Date();
                                    const isOverdue = invoice.status === 'pending' && invoice.due_date && dueDate < today;
                                %>
                                <% if (isOverdue) { %>
                                    <br><small class="text-danger">Overdue</small>
                                <% } %>
                            </td>
                            <td class="hide-mobile">
                                <%= new Date(invoice.issue_date || invoice.created_at).toLocaleDateString() %>
                            </td>
                            <td class="hide-mobile">
                                <% if (invoice.due_date) { %>
                                    <%= new Date(invoice.due_date).toLocaleDateString() %>
                                    <% if (isOverdue) { %>
                                        <br><small class="text-danger">
                                            <%= Math.floor((today - dueDate) / (1000 * 60 * 60 * 24)) %> days overdue
                                        </small>
                                    <% } %>
                                <% } else { %>
                                    <span class="text-muted">No due date</span>
                                <% } %>
                            </td>
                            <td class="hide-mobile">
                                <% if (invoice.proposal_title) { %>
                                    <a href="/proposals/<%= invoice.proposal_id %>" class="text-primary">
                                        <%= invoice.proposal_title %>
                                    </a>
                                <% } else { %>
                                    <span class="text-muted">No proposal</span>
                                <% } %>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/invoices/<%= invoice.id %>" class="btn btn-sm btn-secondary">View</a>
                                    <% if (invoice.status === 'pending') { %>
                                        <button onclick="markPaid(<%= invoice.id %>)" class="btn btn-sm btn-success">Mark Paid</button>
                                    <% } %>
                                    <a href="/invoices/<%= invoice.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                                    <button onclick="deleteInvoice(<%= invoice.id %>)" class="btn btn-sm btn-danger">Delete</button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <svg style="width: 64px; height: 64px; color: var(--text-muted); margin-bottom: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                <h4>No invoices yet</h4>
                <p class="text-muted mb-4">Start by creating your first invoice to bill your clients.</p>
                <a href="/invoices/new" class="btn btn-primary">Create Your First Invoice</a>
            </div>
        <% } %>
    </div>
</div>

<script>
function markPaid(invoiceId) {
    if (confirm('Mark this invoice as paid?')) {
        fetch(`/invoices/${invoiceId}/mark-paid`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error marking invoice as paid');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error marking invoice as paid');
        });
    }
}

function deleteInvoice(invoiceId) {
    if (confirm('Are you sure you want to delete this invoice? This action cannot be undone.')) {
        fetch(`/invoices/${invoiceId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error deleting invoice');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting invoice');
        });
    }
}
</script>

<%- include('../partials/footer') %>