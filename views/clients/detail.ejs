<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><%= client.name %></h2>
        <p class="text-muted"><%= client.company || 'No company specified' %></p>
    </div>
    <div class="d-flex gap-2">
        <a href="/clients" class="btn btn-secondary">Back to Clients</a>
        <a href="/clients/<%= client.id %>/edit" class="btn btn-primary">Edit Client</a>
        <a href="/proposals/new?client_id=<%= client.id %>" class="btn btn-success">New Proposal</a>
        <a href="/invoices/new?client_id=<%= client.id %>" class="btn btn-success">New Invoice</a>
    </div>
</div>

<!-- Client Information -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Client Information</h4>
    </div>
    <div class="card-body">
        <div class="grid-2">
            <div>
                <h6>Contact Details</h6>
                <p><strong>Name:</strong> <%= client.name %></p>
                <% if (client.company) { %>
                    <p><strong>Company:</strong> <%= client.company %></p>
                <% } %>
                <% if (client.email) { %>
                    <p><strong>Email:</strong> <a href="mailto:<%= client.email %>" class="text-primary"><%= client.email %></a></p>
                <% } %>
                <% if (client.phone) { %>
                    <p><strong>Phone:</strong> <a href="tel:<%= client.phone %>" class="text-primary"><%= client.phone %></a></p>
                <% } %>
            </div>
            
            <div>
                <h6>Address</h6>
                <% if (client.address || client.city || client.state || client.zip_code) { %>
                    <% if (client.address) { %>
                        <p><%= client.address %></p>
                    <% } %>
                    <% if (client.city || client.state || client.zip_code) { %>
                        <p>
                            <%= client.city %><% if (client.city && client.state) { %>, <% } %><%= client.state %> <%= client.zip_code %>
                        </p>
                    <% } %>
                    <% if (client.country && client.country !== 'US') { %>
                        <p><%= client.country %></p>
                    <% } %>
                <% } else { %>
                    <p class="text-muted">No address provided</p>
                <% } %>
                
                <p><strong>Status:</strong> <span class="status-badge status-<%= client.status %>"><%= client.status %></span></p>
                <p><strong>Created:</strong> <%= new Date(client.created_at).toLocaleDateString() %></p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="grid-3 mb-4">
    <div class="card">
        <div class="card-body text-center">
            <h3><%= proposals.length %></h3>
            <p class="text-muted">Total Proposals</p>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body text-center">
            <h3><%= invoices.length %></h3>
            <p class="text-muted">Total Invoices</p>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body text-center">
            <h3 class="text-success">
                $<%
                    const totalPaid = invoices
                        .filter(inv => inv.status === 'paid')
                        .reduce((sum, inv) => sum + (inv.total_amount || 0), 0);
                %>
                <%= totalPaid.toFixed(2) %>
            </h3>
            <p class="text-muted">Total Paid</p>
        </div>
    </div>
</div>

<div class="grid-2">
    <!-- Proposals -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4>Proposals</h4>
            <a href="/proposals/new?client_id=<%= client.id %>" class="btn btn-sm btn-primary">New Proposal</a>
        </div>
        <div class="card-body">
            <% if (proposals && proposals.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% proposals.forEach(proposal => { %>
                            <tr>
                                <td>
                                    <a href="/proposals/<%= proposal.id %>" class="text-primary">
                                        <%= proposal.title %>
                                    </a>
                                </td>
                                <td>$<%= proposal.amount ? proposal.amount.toFixed(2) : '0.00' %></td>
                                <td><span class="status-badge status-<%= proposal.status %>"><%= proposal.status %></span></td>
                                <td><%= new Date(proposal.created_at).toLocaleDateString() %></td>
                                <td>
                                    <a href="/proposals/<%= proposal.id %>" class="btn btn-sm btn-secondary">View</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-4">
                    <p class="text-muted">No proposals yet</p>
                    <a href="/proposals/new?client_id=<%= client.id %>" class="btn btn-primary">Create First Proposal</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Invoices -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4>Invoices</h4>
            <a href="/invoices/new?client_id=<%= client.id %>" class="btn btn-sm btn-primary">New Invoice</a>
        </div>
        <div class="card-body">
            <% if (invoices && invoices.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Due Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% invoices.forEach(invoice => { %>
                            <tr>
                                <td>
                                    <a href="/invoices/<%= invoice.id %>" class="text-primary">
                                        <%= invoice.invoice_number %>
                                    </a>
                                </td>
                                <td>$<%= invoice.total_amount ? invoice.total_amount.toFixed(2) : '0.00' %></td>
                                <td><span class="status-badge status-<%= invoice.status %>"><%= invoice.status %></span></td>
                                <td>
                                    <% if (invoice.due_date) { %>
                                        <%= new Date(invoice.due_date).toLocaleDateString() %>
                                        <% 
                                            const dueDate = new Date(invoice.due_date);
                                            const today = new Date();
                                            const isOverdue = invoice.status === 'pending' && dueDate < today;
                                        %>
                                        <% if (isOverdue) { %>
                                            <span class="text-danger">(Overdue)</span>
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-muted">No due date</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/invoices/<%= invoice.id %>" class="btn btn-sm btn-secondary">View</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-4">
                    <p class="text-muted">No invoices yet</p>
                    <a href="/invoices/new?client_id=<%= client.id %>" class="btn btn-primary">Create First Invoice</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>