<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= appName %></title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="main-layout">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2><%= appName %></h2>
                <div class="company-name"><%= process.env.COMPANY_NAME || 'Business Management' %></div>
            </div>
            
            <div class="nav-menu">
                <div class="nav-item">
                    <a href="/" class="nav-link <%= title === 'Dashboard' ? 'active' : '' %>">
                        <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6H8V5z"></path>
                        </svg>
                        Dashboard
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/clients" class="nav-link <%= title.includes('Client') ? 'active' : '' %>">
                        <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                        </svg>
                        Clients
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/proposals" class="nav-link <%= title.includes('Proposal') ? 'active' : '' %>">
                        <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        Proposals
                    </a>
                </div>
                
                <div class="nav-item">
                    <a href="/invoices" class="nav-link <%= title.includes('Invoice') ? 'active' : '' %>">
                        <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                        </svg>
                        Invoices
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">â˜°</button>
                <h1 class="header-title"><%= title %></h1>
                <div class="header-actions">
                    <div class="header-user">
                        <div class="user-avatar">BM</div>
                        <span>Business Manager</span>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="content">

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><%= client.name %></h2>
        <p class="text-muted"><%= client.company || 'No company specified' %></p>
    </div>
    <div class="d-flex gap-2">
        <a href="/clients" class="btn btn-secondary">Back to Clients</a>
        <a href="/clients/<%= client.id %>/edit" class="btn btn-primary">Edit Client</a>
        <a href="/proposals/new?client_id=<%= client.id %>" class="btn btn-success">New Proposal</a>
        <a href="/invoices/new?client_id=<%= client.id %>" class="btn btn-success">New Invoice</a>
    </div>
</div>

<!-- Client Information -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Client Information</h4>
    </div>
    <div class="card-body">
        <div class="grid-2">
            <div>
                <h6>Contact Details</h6>
                <p><strong>Name:</strong> <%= client.name %></p>
                <% if (client.company) { %>
                    <p><strong>Company:</strong> <%= client.company %></p>
                <% } %>
                <% if (client.email) { %>
                    <p><strong>Email:</strong> <a href="mailto:<%= client.email %>" class="text-primary"><%= client.email %></a></p>
                <% } %>
                <% if (client.phone) { %>
                    <p><strong>Phone:</strong> <a href="tel:<%= client.phone %>" class="text-primary"><%= client.phone %></a></p>
                <% } %>
            </div>
            
            <div>
                <h6>Address</h6>
                <% if (client.address || client.city || client.state || client.zip_code) { %>
                    <% if (client.address) { %>
                        <p><%= client.address %></p>
                    <% } %>
                    <% if (client.city || client.state || client.zip_code) { %>
                        <p>
                            <%= client.city %><% if (client.city && client.state) { %>, <% } %><%= client.state %> <%= client.zip_code %>
                        </p>
                    <% } %>
                    <% if (client.country && client.country !== 'US') { %>
                        <p><%= client.country %></p>
                    <% } %>
                <% } else { %>
                    <p class="text-muted">No address provided</p>
                <% } %>
                
                <p><strong>Status:</strong> <span class="status-badge status-<%= client.status %>"><%= client.status %></span></p>
                <p><strong>Created:</strong> <%= new Date(client.created_at).toLocaleDateString() %></p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="grid-3 mb-4">
    <div class="card">
        <div class="card-body text-center">
            <h3><%= proposals.length %></h3>
            <p class="text-muted">Total Proposals</p>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body text-center">
            <h3><%= invoices.length %></h3>
            <p class="text-muted">Total Invoices</p>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body text-center">
            <h3 class="text-success">
                $<%
                    const totalPaid = invoices
                        .filter(inv => inv.status === 'paid')
                        .reduce((sum, inv) => sum + (inv.total_amount || 0), 0);
                %>
                <%= totalPaid.toFixed(2) %>
            </h3>
            <p class="text-muted">Total Paid</p>
        </div>
    </div>
</div>

<div class="grid-2">
    <!-- Proposals -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4>Proposals</h4>
            <a href="/proposals/new?client_id=<%= client.id %>" class="btn btn-sm btn-primary">New Proposal</a>
        </div>
        <div class="card-body">
            <% if (proposals && proposals.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% proposals.forEach(proposal => { %>
                            <tr>
                                <td>
                                    <a href="/proposals/<%= proposal.id %>" class="text-primary">
                                        <%= proposal.title %>
                                    </a>
                                </td>
                                <td>$<%= proposal.amount ? proposal.amount.toFixed(2) : '0.00' %></td>
                                <td><span class="status-badge status-<%= proposal.status %>"><%= proposal.status %></span></td>
                                <td><%= new Date(proposal.created_at).toLocaleDateString() %></td>
                                <td>
                                    <a href="/proposals/<%= proposal.id %>" class="btn btn-sm btn-secondary">View</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-4">
                    <p class="text-muted">No proposals yet</p>
                    <a href="/proposals/new?client_id=<%= client.id %>" class="btn btn-primary">Create First Proposal</a>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Invoices -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4>Invoices</h4>
            <a href="/invoices/new?client_id=<%= client.id %>" class="btn btn-sm btn-primary">New Invoice</a>
        </div>
        <div class="card-body">
            <% if (invoices && invoices.length > 0) { %>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Due Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% invoices.forEach(invoice => { %>
                            <tr>
                                <td>
                                    <a href="/invoices/<%= invoice.id %>" class="text-primary">
                                        <%= invoice.invoice_number %>
                                    </a>
                                </td>
                                <td>$<%= invoice.total_amount ? invoice.total_amount.toFixed(2) : '0.00' %></td>
                                <td><span class="status-badge status-<%= invoice.status %>"><%= invoice.status %></span></td>
                                <td>
                                    <% if (invoice.due_date) { %>
                                        <%= new Date(invoice.due_date).toLocaleDateString() %>
                                        <% 
                                            const dueDate = new Date(invoice.due_date);
                                            const today = new Date();
                                            const isOverdue = invoice.status === 'pending' && dueDate < today;
                                        %>
                                        <% if (isOverdue) { %>
                                            <span class="text-danger">(Overdue)</span>
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-muted">No due date</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/invoices/<%= invoice.id %>" class="btn btn-sm btn-secondary">View</a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-4">
                    <p class="text-muted">No invoices yet</p>
                    <a href="/invoices/new?client_id=<%= client.id %>" class="btn btn-primary">Create First Invoice</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

</div>
        </main>
    </div>

    <script src="/public/js/main.js"></script>
</body>
</html>